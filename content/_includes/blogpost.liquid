---
title: Default Title
css: /styles.css
nesting: ../../
---
<!DOCTYPE html><html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="{{ nesting }}Assets/favicon.ico" rel="icon" type="image/x-icon" />
  <link rel="stylesheet" href="{{css}}{{ nocache }}">
    <link rel="alternate" type="application/rss+xml" title="Caffeine and Lasers RSS Feed" href="/feed.xml">
    <!-- Canonical URL for SEO and sitemap -->
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    <!-- Octothorpes: request indexing of this page on load -->
    <link rel="preload" as="fetch" href="https://octothorp.es/?uri={{ site.url }}{{ page.url }}">
    <!-- Octothorpes: emit one link per tag on this page -->
    {% if tags %}
      {% for tag in tags %}
        <link rel="octo:octothorpes" href="{{ tag }}">
      {% endfor %}
    {% endif %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <meta name="color-scheme" content="dark light">
    <meta name="theme-color" content="#1e1e2e" media="(prefers-color-scheme: dark)">
    <meta name="theme-color" content="#eff1f5" media="(prefers-color-scheme: light)">
    <script>
      (function() {
        try {
          var stored = localStorage.getItem('cl-theme');
          var prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
          var theme = stored || (prefersLight ? 'theme-light' : 'theme-dark');
          document.documentElement.classList.add(theme);
        } catch (e) {}
      })();
    </script>
</head>

{% include "header.liquid" %}

<div id="flex">

<aside id="leftSidebar">{% include "sidebar.liquid" %}</aside>

<main>

 <h1 style="font-size:35px;">{{title}}</h1>

<div style="border: 1px solid #ccc; padding: 5px; margin-bottom: 10px;">
  <p><strong>Date:</strong> {{ date | date: "%Y-%m-%d" }}</p>
  <p><strong>Last Updated:</strong> {{ updated | date: "%Y-%m-%d" }}</p>
</div>

{{ content }}


{% if tags and tags.size > 0 %}
<section class="post-tags" aria-label="Post tags">
  <h2 class="post-tags__heading">Tags</h2>
  <div class="post-tags__list">
    {% for tag in tags %}
    <a
      class="post-tag"
      href="https://octothorp.es/explore?o={{ tag | url_encode }}%2C{{ tag | downcase | url_encode }}"
      target="_blank"
      rel="noopener noreferrer"
    >
      #{{ tag }}
    </a>
    {% endfor %}
  </div>
</section>
{% endif %}


<div id="c_widget"></div>
<script src="{{nesting}}comment-widget/comment-widget.js"></script>
</main>

</div>
{% include "footer.liquid" %}

<script src="/scripts.js{{ nocache }}"></script>
<button id="theme-toggle" class="theme-toggle-fab" aria-pressed="false" aria-label="Toggle color theme" title="Toggle theme">ðŸŒ™ Dark</button>
</html>

