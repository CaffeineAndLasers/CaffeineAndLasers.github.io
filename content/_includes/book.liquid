---
title: Default Title
css: /styles.css
nesting: ../../
---
<!DOCTYPE html><html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link href="{{ nesting }}Assets/favicon.ico" rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="{{css}}{{ nocache }}">
    <link rel="alternate" type="application/rss+xml" title="Caffeine and Lasers - Book Reviews" href="/feeds/books.xml">
    <link rel="alternate" type="application/rss+xml" title="Caffeine and Lasers RSS Feed" href="/feed.xml">
    <!-- Canonical URL for SEO and sitemap -->
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    <!-- Octothorpes: request indexing of this page on load -->
    <link rel="preload" as="fetch" href="https://octothorp.es/?uri={{ site.url }}{{ page.url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <meta name="color-scheme" content="dark light">
    <meta name="theme-color" content="#1e1e2e" media="(prefers-color-scheme: dark)">
    <meta name="theme-color" content="#eff1f5" media="(prefers-color-scheme: light)">
    <script>
      (function() {
        try {
          var stored = localStorage.getItem('cl-theme');
          var prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
          var theme = stored || (prefersLight ? 'theme-light' : 'theme-dark');
          document.documentElement.classList.add(theme);
        } catch (e) {}
      })();
    </script>
</head>

{% include "header.liquid" %}

<div id="flex">

<aside id="leftSidebar">{% include "sidebar.liquid" %}</aside>

<main>

<article class="book-review">
  <header class="book-review-header">
    <h1>{{ title }}</h1>
    {% if author %}
    <p class="book-author">by {{ author }}</p>
    {% endif %}
  </header>

  <div class="book-review-content">
    <div class="book-review-meta" style="display: flex; flex-direction: row; align-items: flex-start; gap: 20px;">
      {% if coverImg %}
      <div class="book-cover-large" style="flex: 0 0 auto; text-align: left; margin-right: 30px;">
        <img src="{{ coverImg }}" alt="Cover of {{ title | xml_escape }}" class="cover-image" style="max-height: 320px; max-width: 100%; border-radius: 6px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
      </div>
      {% endif %}

      <div class="book-info" style="flex: 1;">
        {% if rating %}<p><strong>Rating:</strong> {{ rating }}</p>{% endif %}
        <p><strong>Type:</strong> {% if fiction %}Fiction{% else %}Non-Fiction{% endif %}</p>
        {% if date %}
        {% assign date_parts = date | split: "-" %}
        <p><strong>Read:</strong>
          {% case date_parts[1] %}
            {% when "01" %}January
            {% when "02" %}February
            {% when "03" %}March
            {% when "04" %}April
            {% when "05" %}May
            {% when "06" %}June
            {% when "07" %}July
            {% when "08" %}August
            {% when "09" %}September
            {% when "10" %}October
            {% when "11" %}November
            {% when "12" %}December
          {% endcase %} {{ date_parts[0] }}</p>
        {% endif %}
      </div>
    </div>

    <div class="book-thoughts" style="margin-top: 24px; padding: 16px 20px; border: none; border-radius: var(--border-radius-small); position: relative; background-color: var(--color-bg-medium);">
      <div style="position:absolute; left:-10px; top:12px; bottom:12px; width:6px; background: var(--color-primary-purple); border-radius: 6px;"></div>
      <h2 style="margin-top: 0;">My Thoughts</h2>
      {% if thoughts %}
        <p>{{ thoughts }}</p>
      {% else %}
        {{ content }}
      {% endif %}
    </div>
  </div>
  <p style="margin-top: 18px;"><a href="/Library.html">‚Üê Back to Library</a></p>
</article>

</main>

</div>
{% include "footer.liquid" %}

<script src="/scripts.js{{ nocache }}"></script>
<button id="theme-toggle" class="theme-toggle-fab" aria-pressed="false" aria-label="Toggle color theme" title="Toggle theme">üåô Dark</button>
</html>
