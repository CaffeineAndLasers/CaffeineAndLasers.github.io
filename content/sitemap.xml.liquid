---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="/sitemap.xsl"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in collections.all %}
  {% unless page.data.eleventyExcludeFromCollections or page.url == '/sitemap.xml' or page.url == '/404.html' %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ page.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</lastmod>
    <changefreq>{{ page.data.changeFreq | default: "monthly" }}</changefreq>
    <priority>{{ page.data.sitePriority | default: 0.7 }}</priority>
  </url>
  {% endunless %}
{%- endfor %}
</urlset>