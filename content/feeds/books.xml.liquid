---
title: Caffeine and Lasers - Book Reviews
description: Book reviews and reading thoughts from Caffeine and Lasers
rootURL: https://caffeineandlasers.com
eleventyExcludeFromCollections: true
permalink: /feeds/books.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ title }}</title>
    <description>{{ description }}</description>
    <link>{{ rootURL }}/Library.html</link>
    <atom:link href="{{ rootURL }}/feeds/books.xml" rel="self" type="application/rss+xml"/>
    {% assign sortedBooks = books | sort: 'date' | reverse %}
    <lastBuildDate>{{ sortedBooks[0].date | date: "%a, %d %b %Y 00:00:00 +0000" }}</lastBuildDate>
    <ttl>1440</ttl>

    {% for book in sortedBooks %}
    <item>
      <title><![CDATA[{{ book.name }} by {{ book.author }}]]></title>
      <description><![CDATA[
        <p><strong>Rating:</strong> {{ book.rating }}</p>
        <p><strong>Type:</strong> {% if book.fiction %}Fiction{% else %}Non-Fiction{% endif %}</p>
        <p><img src="{{ rootURL }}{{ book.coverImg }}" alt="Cover of {{ book.name | xml_escape }}" style="max-width: 200px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);"/></p>
        <p>{{ book.thoughts | xml_escape }}</p>
      ]]></description>
      <link>{{ rootURL }}/books/{{ book.name | slugify }}.html</link>
      <guid isPermaLink="true">{{ rootURL }}/books/{{ book.name | slugify }}.html</guid>
      <pubDate>{{ book.date | date: "%a, %d %b %Y 00:00:00 +0000" }}</pubDate>
    </item>
    {% endfor %}
  </channel>
</rss>
