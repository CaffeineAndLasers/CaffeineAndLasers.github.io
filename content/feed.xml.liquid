---
title: Caffeine and Lasers
description: Coffee, Science and Beer
rootURL: https://caffeineandlasers.com
eleventyExcludeFromCollections: true # Keep this if you don't want the feed itself in collections
permalink: /feed.xml # Ensure it outputs to the root
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ title }}</title>
    <description>{{ description }}</description>
    <link>{{ rootURL }}</link>
    <atom:link href="{{ rootURL }}/feed.xml" rel="self" type="application/rss+xml"/>
    {% assign allItems = collections.updates | concat: books | sort: 'date' | reverse %}
    <lastBuildDate>{{ allItems[0].date | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
    <ttl>1440</ttl>

    {% for post in collections.updates %}
    <item>
      <title>{{ post.data.title }}</title>
      <description>{{ post.data.description }}</description>
      <content:encoded><![CDATA[{{ post.templateContent | absoluteUrl: rootURL }}]]></content:encoded>
      <link>{{ rootURL }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ rootURL }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    </item>
    {% endfor %}

    {% for book in books %}
    {% assign sortedBooks = books | sort: 'date' | reverse %}
    {% endfor %}
    {% for book in sortedBooks %}
    <item>
      <title><![CDATA[Book Review: {{ book.name }} by {{ book.author }}]]></title>
      <description><![CDATA[
        <p><strong>Rating:</strong> {{ book.rating }}</p>
        <p><strong>Type:</strong> {% if book.fiction %}Fiction{% else %}Non-Fiction{% endif %}</p>
        <p><img src="{{ rootURL }}{{ book.coverImg }}" alt="Cover of {{ book.name | xml_escape }}" style="max-width: 200px; box-shadow: 0 4px 8px rgba(0,0,0,0.2);"/></p>
        <p>{{ book.thoughts | xml_escape }}</p>
      ]]></description>
      <link>{{ rootURL }}/books/{{ book.name | slugify }}.html</link>
      <guid isPermaLink="true">{{ rootURL }}/books/{{ book.name | slugify }}.html</guid>
      <pubDate>{{ book.date | date: "%a, %d %b %Y 00:00:00 +0000" }}</pubDate>
    </item>
    {% endfor %}
  </channel>
</rss>

